#include <iostream>

using namespace std;

void bubble_Sort(int *A , int n)
{
    int temp;
    for(int i=0; i< n ; i++)
    {
        for(int j=0; j<(n-1); j++)
        {
            if(A[j] > A[j+1])
            {
                temp=A[j];
                A[j]=A[j+1];
                A[j+1]=temp;
            }
        }
    }
}

void print_array(int *A, int n)
{
    for(int i=0;i < n; i++)
    {
        cout<<A[i]<<endl;
    }
    cout<<"\n";
}
int main()
{

    int A[]={1,5,4,3,9,8};
    int n=5;

    print_array(A, n);
    bubble_Sort(A, n);
    print_array(A, n);
    return 0;
}
